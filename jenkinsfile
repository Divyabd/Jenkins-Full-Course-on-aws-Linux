pipeline{
    agent any

// environment{
//     PATH="/opt/maven/apache-maven-3.8.6/bin:$PATH"
// }



    stages{

//   GIT checkout stage 
        stage('GIT CHECKOUT'){
            steps{
                git 'https://github.com/Divyabd/Jenkins-Full-Course-on-aws-Linux.git'
            }
        }


//  Maven build stage 
        stage('Maven clean'){
            tools{
'maven' 'maven3'
}
            steps{
                sh 'mvn -f Maven/pom.xml clean install'
                sh 'mvn -f Maven/pom.xml install package'
            }
        }
    }
}